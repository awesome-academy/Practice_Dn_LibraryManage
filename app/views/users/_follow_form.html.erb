
<div id="follow_form">
<% if current_user.following?(@user) %>
<%= button_to 'Unfollow', follow_path(@user,current_user.received_follows.find_by_followed_id(@user).id), method: :delete, remote: true ,class: 'btn btn-success btn-block' %>
<% else %>
<%= button_to 'Follow', follows_path(@user,current_user.received_follows.build(followed_id: @user.id), remote: true), class: 'btn btn-success btn-block' %>
<% end %>
</div>
